                HorizontalOptions="Center"
                
                Padding="10,10,10,10"
                
                CornerRadius="50"
                
                Margin="10"
                
                BackgroundColor= "#FF66C4"
                
                Clicked="ImageButton_Clicked_TablasMultiplicar"
                
                />

                <!-- Agregamos un ImageButton con su evento click que nos dara acceso a la app  -->

                <ImageButton  
                
                Source="sueldo.png"    
                
                WidthRequest="300"
                
                HeightRequest="100"
                
                HorizontalOptions="Center"
                
                Padding="10,10,10,10"
                
                CornerRadius="50"
                
                Margin="10"
                
                BackgroundColor="#8C52FF"
                
                Clicked="ImageButton_Clicked_SueldoSemanal"
                
                />

                <!-- Agregamos un ImageButton con su evento click que nos dara acceso a la app  -->

                <ImageButton 
                
